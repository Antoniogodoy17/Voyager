<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".ui.ActivityActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activityHeader"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo512" />

                <Button
                    android:id="@+id/closeButton"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"/>


            </android.support.constraint.ConstraintLayout>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="@color/colorSecondaryLight"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/activityRating"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:stepSize="1"
                    android:layout_marginEnd="-25dp"/>

                <ImageButton
                    android:id="@+id/bookmarkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/bookmark_border"
                    android:layout_marginEnd="10dp"/>

                <ImageButton
                    android:id="@+id/favButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_favorite_border_black_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/averageScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Average_score"
                    android:background="@color/white"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activityScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    android:textColor="@color/colorSecondaryLight"
                    android:textSize="15sp" />
            </TableRow>

            <TextView
                android:id="@+id/activityDescription"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activityDate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activityLocation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight"
                android:textSize="18sp" />

            <!--<Map -->
            <!--/>-->

            <TextView
                android:id="@+id/activityCategory"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>